<div class="d-flex align-items-center justify-content-between ms-5">
  <div class="d-flex col-md-4">
    <%= image_tag asset.coin.icon, size: "35x35", class: "align-self-center me-1" %>
    <div class="col d-flex flex-column m-2">
      <span class="fs-5"><%= asset.coin.ticker %></span>
      <br>
      <span class="fs-6 text-white-50"><%= asset.coin.rate %></span>
    </div>
  </div>

  <div class="col-md-4 balance-details d-flex justify-content-start">
    <div class="d-flex flex-column">
      <span class="fs-5"><%= asset.amount %></span>
      <span class="fs-6 text-white-50"><%= number_to_currency asset.value %></span>
    </div>
  </div>

  <div class="col-md-4">
    <span class="fs-5">
      <%= number_to_percentage asset.percentage, precision: 2 %>
    </span>
  </div>
</div>