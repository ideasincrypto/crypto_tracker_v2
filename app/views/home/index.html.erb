<h1>CryptoTracker</h1>

<div>
  <%= link_to "Add new Holding", new_holding_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Coin</th>
      <th>Amount</th>
      <th>Rate (USD)</th>
      <th>24h change</th>
      <th>Value</th>
      <th>%</th>
    </tr>
  </thead>
  <tbody>
    <% @portfolio.each do |holding| %>
      <tr>
        <td><%= holding.ticker %></td>
        <td><%= holding.amount %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>TOTAL</td>
      <td></td>
    </tr>
  </tfoot>
</table>